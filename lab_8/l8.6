#include <iostream>
using namespace std;

int minElement(int arr[], int n, int i, int min) {
    if(i == n - 1) {
        if(arr[i] < min) {
            return arr[i];
        }
        else {
            return min;
        }
    }
    
    if(arr[i] < min) {
        min = arr[i];
    }
    return minElement(arr, n, i + 1, min);
}

