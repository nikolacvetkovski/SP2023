#include <iostream>
#include <cstring>
using namespace std;

int countLetters(char *row, int n) {
    int countLetters = 0, finalCounter = 0;
    
    for(int i = 0; i < n; i++) {   // Svrznicite vo makedonskiot jazik se sluzbeni zborovi
        if(isalpha(row[i])) {
            ++countLetters;
        }
        else if(isspace(row[i]) || ispunct(row[i])) {
            if(countLetters > 0 && countLetters <= 3) {
                ++finalCounter;
                countLetters = 0;
            }
            else {
                countLetters = 0;
            }
        }
    }
    return finalCounter;
}

int main()
{
    char row[100], maxRow[100];
    int finalCounter, maxCounter = 0;
    
    while(true) {
        cin.getline(row, 100);
        int n = strlen(row);
        if(n == 0) {
            break;
        }
        
        finalCounter = countLetters(row, n);
        
        if(finalCounter > maxCounter) {
            maxCounter = finalCounter;
            strcpy(maxRow, row);
        }
    }
    
    cout << maxCounter << ": " << maxRow << endl;
    return 0;
}
