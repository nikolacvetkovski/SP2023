#include <iostream>
using namespace std;

int main()
{
    int n, m, mat[100][100], counter, k = 0;
    cin >> n >> m;
    
    int stosenNumber[n];
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < m; j++) {
            cin >> mat[i][j];
        }
    }
    
    for(int i = 0; i < n; i++) {
        counter = 0;
        for(int j = 0; j < m; j++) {
            if((i + j) % 2 == 0) {
                if(mat[i][j] % 2 == 0) {
                    ++counter;
                }
            }
            else if((i + j) % 2 != 0) {
                if(mat[i][j] % 2 != 0) {
                    ++counter;
                }
            }
        }
        stosenNumber[k++] = counter;
    }
    
    for(int i = 0; i < k; i++) {
        cout << i << ": " << stosenNumber[i] << endl;
    }
    
    return 0;
}
