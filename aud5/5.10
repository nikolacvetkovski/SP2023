#include <iostream>
using namespace std;

int main()
{
    int number, curr = 0, prev = 0, maxSum = 0, counter = 1, poscurr, posprev;
    while(cin >> number) {
        prev = curr;
        curr = number; // 1 5 3 2 4 0 0
        if(prev < 0 && curr < 0) {
            break;
        }
        if((prev + curr) > maxSum) {
            maxSum = prev + curr;
            poscurr = counter;
            posprev = counter - 1;
        }
        ++counter;
    }
    cout << maxSum << endl << posprev << endl << poscurr << endl;
    return 0;
}
