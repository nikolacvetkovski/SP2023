#include <iostream>
using namespace std;

void findArray(int *array, int n, int *start, int *size) {
    int maxStart = 0, maxSize = 0;
    *start = 0, *size = 1;
    for(int i = 0; i < n - 1; i++) {
        if(*(array + i) < *(array + i + 1)) {
            ++(*size);
        }
        else {
            if(*size > maxSize) {
                maxSize = *size;
                maxStart = *start;
            }
            *start = i + 1, *size = 1;
        }
    }
    
    if (*size > maxSize) {
        maxSize = *size;
        maxStart = *start;
    }
    
    *start = maxStart;
    *size = maxSize;
}

int main()
{
    int array[100], n, start, size;
    cin >> n;
    
    for(int i = 0; i < n; i++) {
        cin >> array[i];
    }
    
    findArray(array, n, &start, &size);
    
    cout << "Index: " << start << endl << "Size: " << size << endl; 
    return 0;
}
