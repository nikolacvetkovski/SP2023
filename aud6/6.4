#include <iostream>
using namespace std;

int sumOfDigits(int number) {
    int sum = 0;
    while(number > 0) {
        int digit = number % 10;
        sum += digit;
        number /= 10;
    }
    return sum;
}

bool isPrimeNumber(int number) {
    if(number < 4) {
        return true;
    }
    bool isTrue = false;
    for(int j = number - 1; j > 1; j--) {
        if(number % j != 0) {
            isTrue = true;
        }
        else {
            isTrue = false;
            break;
        }
    }
    if(!isTrue) {
        return false;
    }
    else {
        return true;
    }
}

int main() {
   int counter = 0;
   for(int i = 10000; i > 1; i--) {
       if(isPrimeNumber(i) && isPrimeNumber(sumOfDigits(i))) {
           ++counter;
           cout << i << endl;
       }
   }
   cout << "----> " << counter << endl;
   return 0;
}
