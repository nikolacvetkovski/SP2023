#include <iostream>
#include <cmath>
using namespace std;

int sumOfTriplets(int a, int b, int c) {
    return abs((a - b)) + abs((b - c));
}

int main() {
   int n, a, b, c, d, minSum = 1000000000;
   cin >> n;
   
   for(int i = 0; i < n; i++) {
       cin >> a >> b >> c;
       
       d = sumOfTriplets(a, b, c);
       if(d < minSum) {
           minSum = d;
       }
   }
   
   cout << minSum;
   return 0;
}
