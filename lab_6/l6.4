#include <iostream>
using namespace std;

int main() {
   int array[100], n;
   cin >> n;
   
   for(int i = 0; i < n; i++) {
       cin >> array[i];
   }
   
   int maxSum = 0, indexPointer;
   
   for(int i = 0; i < n; i++) {
       int sum = array[i] + array[i + 1];
       if(sum > maxSum) {
           maxSum = sum;
           indexPointer = i + 1;
       }
   }
   
   cout << "Maximum Sum: " << maxSum << endl;
   cout << "Percentage of used elements: " << (float)(indexPointer + 1) / n * 100 << "%" << endl;
   return 0;
}
